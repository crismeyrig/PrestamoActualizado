<Window x:Class="RegistroPrestamos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroPrestamos"
        mc:Ignorable="d"
        Title="Menu principal" Height="450" Width="700">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Registros">
                <MenuItem x:Name="RegistrosPersonas" Header="Registros Personas" Click="RegistrosPersonasButton_Click"></MenuItem>
                <MenuItem x:Name="RegistrosPrestamos" Header="Registros Prestamos" Click="RegistrosPrestamosButton_Click"></MenuItem>


            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem x:Name="ConsultasPersonas" Header="Consultas Personas" Click="ConsultasPersonasButton_Click"></MenuItem>
                <MenuItem x:Name="ConsultasPrestamos" Header="Consultas Prestamos" Click="ConsultasPrestamosButton_Click"></MenuItem>

            </MenuItem>
        </Menu>
    </Grid>
</Window>
